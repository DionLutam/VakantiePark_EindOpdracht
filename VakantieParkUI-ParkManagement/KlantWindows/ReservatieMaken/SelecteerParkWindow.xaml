<Window
    x:Class="VakantieParkUI_ParkManagement.KlantWindows.SelecteerParkWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VakantieParkUI_ParkManagement.KlantWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SelecteerParkWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="424" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock
                Margin="10"
                FontSize="16"
                FontWeight="Bold"
                Text="Selecteer een locatie:" />
            <ComboBox
                Name="LocatieComboBox"
                Width="180"
                Margin="10"
                ItemsSource="{Binding Locaties}"
                SelectedIndex="0" />
            <TextBlock
                Margin="10"
                FontSize="16"
                FontWeight="Bold"
                Text="Selecteer faciliteiten:" />
            <ItemsControl Name="FaciliteitenCheckbox" ItemsSource="{Binding Faciliteiten}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid
                            Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox
                            Margin="5"
                            Content="{Binding}"
                            IsChecked="False" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button
                Margin="10"
                Click="Button_Click_Zoeken"
                Content="Zoeken" />
        </StackPanel>

        <DataGrid
            Name="ParkenDataGrid"
            Grid.Column="1"
            Margin="10,10,10,10"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            MouseDoubleClick="DoubleClick_SelectedPark">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Naam, Mode=OneWay}"
                    Header="Parknaam" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Locatie, Mode=OneWay}"
                    Header="Locatie" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
