<Window
    x:Class="VakantieParkUI_ParkManagement.StartScherm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VakantieParkUI_ParkManagement"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StartScherm"
    Width="800"
    Height="450"
    Background="#FF2D2D30"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0"
                Margin="50,150,50,150"
                Background="#FF007ACC"
                Foreground="White"
                FontSize="20"
                BorderBrush="#FF004C8C"
                BorderThickness="2"
                Content="Klant"
                Click="Button_Click_Klant" />

        <Button Grid.Column="1"
                Margin="50,150,50,150"
                Background="#FF007ACC"
                Foreground="White"
                FontSize="20"
                BorderBrush="#FF004C8C"
                BorderThickness="2"
                Content="Beheerder"
                Click="Button_Click_Beheerder" />
    </Grid>

</Window>
